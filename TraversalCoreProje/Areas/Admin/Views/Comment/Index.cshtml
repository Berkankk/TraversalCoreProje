@model List<Comment>
@{
    ViewData["Title"] = "Yorum Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Yorum Listesi</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kullanıcı</th>
            <th>Rota</th>
            <th>Tarih</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CommentUser</td>
                <td>@item.Destination.City</td> <!-- Rota ismi, Destination nesnesinden geliyor -->
                <td>@item.CommentDate.ToString("dd MMM yyyy")</td> <!-- Tarihi okunabilir formatta gösteriyoruz -->
                <td>
                    <a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger" onclick="return confirm('Bu yorumu silmek istediğinize emin misiniz?');">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
